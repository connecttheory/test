<% if @user.background_repeat.present? %>
  <% bgrepeat = @user.background_repeat %>
<% else %>
  <% bgrepeat = "repeat" %>
<% end %>
<% if @user.background_pos_h.present? %>
  <% bgpos_h = @user.background_pos_h %>
<% else %>
  <% bgpos_h = "left" %>
<% end %>
<% if @user.background_pos_v.present? %>
  <% bgpos_v = @user.background_pos_v %>
<% else %>
  <% bgpos_v = "top" %>
<% end %>
<% if @user.background_attachment.present? %>
  <% bgattachment = @user.background_attachment %>
<% else %>
  <% bgattachment = "fixed" %>
<% end %>
<% if @user.margin_top.present? %>
  <% margin_top = @user.margin_top.to_i %>
<% else %>
  <% margin_top = 12 %>
<% end %>
<% if @user.margin_bottom.present? %>
  <% margin_bottom = @user.margin_bottom.to_i %>
<% else %>
  <% margin_bottom = 12 %>
<% end %>
<% if @user.logo_top.present? && @user.logo_top < 0 %>
  <% logo_top = 0 %>
<% else %>
  <% logo_top = @user.logo_top %>
<% end %>

<style type="text/css">

  body {
    background-color: #<%= @user.portfolio_bg %>;
    font-family: <%= @user.font_face %>, helvetica, sans-serif, serif;
    <% if @user.background_image.present? && @user.enable_background_image? %>
    background-image: url(/assets/styles/patterns/<%= @user.background_image %>);
    <% end %>
    background-repeat: <%= bgrepeat %>;
    background-attachment: <%= bgattachment %>;
    background-position: <%= bgpos_h %> <%= bgpos_v %>;
  }     
  body, navigation a, .porfolio-nav li a {
    color: #<%= @user.font_color %>
  }
  #sidebarNavigation .porfolio-nav li a {
    font-size: <%= @user.font_size %>px;
  }
  #footer_sm {
    background: #<%= @user.footer_bg %>;
  }
  .image-block {
    margin-top: <%= margin_top %>px;
    margin-bottom: <%= margin_bottom %>px;
  }
  #sidebarHeader {
    position: fixed;
    left: <%= @user.logo_left %>px;
    top: <%= @user.logo_top %>px;
  }
  <% if @user.font_color_footer.present? %>
  #footer_sm,
  #footer_sm a {
    color: #<%= @user.font_color_footer %>;
  }
  <% end %>
  
  <% if @user.proj_nav_top.present? && @user.proj_nav_left.present? %>
  #sidebarNavigation {
    position: fixed;
    bottom: auto;
    left: <%= @user.proj_nav_left %>px;
    top: <%= @user.proj_nav_top %>px;
  }
  <% end %>
</style>