<% if @user.background_repeat.present? %>
  <% bgrepeat = @user.background_repeat %>
<% else %>
  <% bgrepeat = "repeat" %>
<% end %>
<% if @user.background_pos_h.present? %>
  <% bgpos_h = @user.background_pos_h %>
<% else %>
  <% bgpos_h = "left" %>
<% end %>
<% if @user.background_pos_v.present? %>
  <% bgpos_v = @user.background_pos_v %>
<% else %>
  <% bgpos_v = "top" %>
<% end %>
<% if @user.background_attachment.present? %>
  <% bgattachment = @user.background_attachment %>
<% else %>
  <% bgattachment = "fixed" %>
<% end %>
<% if @user.margin_top.present? %>
  <% margin_top = @user.margin_top.to_i %>
<% else %>
  <% margin_top = 12 %>
<% end %>
<% if @user.margin_bottom.present? %>
  <% margin_bottom = @user.margin_bottom.to_i %>
<% else %>
  <% margin_bottom = 12 %>
<% end %>
<% if @user.logo_top.present? && @user.logo_top < 0 %>
  <% logo_top = 0 %>
<% else %>
  <% logo_top = @user.logo_top %>
<% end %>

<style type="text/css">

  body {
    background-color: #<%= @user.portfolio_bg %>;
    font-family: <%= @user.font_face %>, helvetica, sans-serif, serif;
    <% if @user.background_image.present? && @user.enable_background_image? %>
    background-image: url(<%= @user.background_image %>);
    <% else %>
    background-image: none;
    <% end %>
    background-repeat: <%= bgrepeat %>;
    background-attachment: fixed<% bgattachment %>;
    background-position: left top<% bgpos_h %> <% bgpos_v %>;
  }     
  body, navigation a, .porfolio-nav li a {
    color: #<%= @user.font_color %>
  }
  #sidebarNavigation .porfolio-nav li a {
    font-size: <%= @user.font_size %>px;
  }
  #footer_sm {
    background: #<%= @user.footer_bg %>;
  }
  .image-block {
    margin-top: <%= margin_top %>px;
    margin-bottom: <%= margin_bottom %>px;
  }
  #sidebarHeader {
    position: fixed;
    left: <%= @user.logo_left %>px;
    top: <%= @user.logo_top %>px;
  }
  <% if @user.logo_width.present? %>
  #sidebarHeader img {
    width: <%= @user.logo_width %>px;
  }
  <% end %>
  <% if @user.font_color_footer.present? %>
  #footer_sm,
  #footer_sm a {
    color: #<%= @user.font_color_footer %>;
  }
  <% end %>
  
  <% if @user.proj_nav_top.present? && @user.proj_nav_left.present? %>
  #sidebarNavigation {
    position: fixed;
    bottom: auto;
    left: <%= @user.proj_nav_left %>px;
    top: <%= @user.proj_nav_top %>px;
  }
  <% end %>
  
  <% if @user.project_thumb_wrap_holder_X.present? || @user.project_thumb_holder_width.present? %>
    #project_thumb_wrap_holder {
      position: relative;
      <% if @user.project_thumb_wrap_holder_X.present? && @user.project_thumb_wrap_holder_Y.present? %>
      left: <%= @user.project_thumb_wrap_holder_X %>px;
      top: <%= @user.project_thumb_wrap_holder_Y %>px;
      <% end %>
      <% if @user.project_thumb_holder_width.present? %>
      width: <%= @user.project_thumb_holder_width %>px;
      <% end %>
    }
  <% end %>
  
  <% if @sublist %>
  #project_description_wrap {
    <% if @user.description_left.present? && @user.description_top.present? %>
    position: fixed;
    left: <%= @user.description_left %>px;
    top: <%= @user.description_top %>px;
    width: 250px;
    <% end %>
    <% if @user.description_bg_color.present? %>
    background-color: #<%= @user.description_bg_color %>;
    <% end %>
    <% if @user.description_font_color.present? %>
    color: #<%= @user.description_font_color %>;
    <% end %>
    <% if @user.description_width.present? %>
    width: <%= @user.description_width %>px;
    <% end %>
    <% if @user.description_height.present? %>
    height:  <%= @user.description_height %>px;
    <% end %>
  }
    <% if @user.image_container_left.present? %>
      #images-container {
        position: relative;
        left: <%=  @user.image_container_left%>px;
      }
    <% end %>
  <% end %>
</style>