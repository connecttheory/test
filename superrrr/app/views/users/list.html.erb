<% @page_title = "Users List" %>

<div class="user list">
  <h1>Users</h1>

  <div><%= pluralize(@users.size, 'user') %> found</div>
  
  <table class="listing" summary="Users list">
    <tr>
      <th>Username</th>
      <th>Name</th>
      <th>Email</th>
      <th>Avatar</th>
      <th>Actions</th>
    </tr>
    <% @users.each do |user| %>
    <tr class="<%= cycle('odd', 'even') %>">
      <td><%= user.username %></td>
      <td><%= user.name %></td>
      <td><%= mail_to(user.email) %></td>
      <td><%= image_tag user.photo.url(:small) %></td>
      <td class="actions">
        <%= link_to('Edit', {:action => 'edit', :id => user.id}, :class => 'action edit') %>
        <%= link_to('Delete', {:action => 'delete', :id => user.id}, :class => 'action delete') %>
      </td>
    </tr>
    <% end %>
  </table>

</div>
